<div class="container">
	<div class="row">
		<div class="col-xs-offset-1 col-xs-8">
			<h5><span class="heading">マイページ</span></h5>
			<p><strong class="information-link"><i class="far fa-user"></i>登録情報</strong>
				<%= link_to " 編集する", edit_public_customers_path, class: "glyphicon glyphicon-pencil btn btn-success" %>
			</p>
	
				<table class="table table-bordered table-condensed" >
					<tbody>
						<tr>
							<td class="info col-xs-2">苗字</td>
							<td class="text-left"><%= @customer.first_name %></td>
						</tr>
							<tr>
							<td class="info col-xs-2">名前</td>
							<td class="text-left"><%= @customer.last_name %></td>
						</tr>
						<tr>
							<td class="info">カナ姓</td>
							<td class="text-left"><%= @customer.first_name_ruby %></td>
						</tr>
						<tr>
							<td class="info">カナ名</td>
							<td class="text-left"><%= @customer.last_name_ruby %></td>
						</tr>
						<tr>
							<td class="info">郵便番号</td>
							<td class="text-left"><%= @customer.post_code %></td>
						</tr>
						<tr>
							<td class="info">住所</td>
							<td class="text-left"><%= @customer.address %></td>
						</tr>
						<tr>
							<td class="info">電話番号</td>
							<td class="text-left"><%= @customer.telephone_number %></td>
						</tr>
						<tr>
							<td class="info">メールアドレス</td>
							<td class="text-left"><%= @customer.email %></td>
						</tr>
					</tbody>
				</table>
	
				<div class="mypage-bottoms">
					<P><strong class="shipping-link">配送先</strong>
						<%= link_to " 一覧を見る", public_shippings_path, data: {"turbolinks" => false}, class: "glyphicon glyphicon-folder-open btn btn-info" %>
					</p>
					<p><strong class="order-link">注文履歴</strong>
						<%= link_to " 一覧を見る", public_orders_path, class: "glyphicon glyphicon-folder-open btn btn-info" %>
					</p>
				</div>
		</div>
    </div>
</div>