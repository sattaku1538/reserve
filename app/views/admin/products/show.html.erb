<div class="container mt-3">
  <h3>商品詳細</h3>
  <div class="row mt-5">
    <div class="col-4">
      <%= attachment_image_tag @product, :image, :fill, 250, 150 %>
    </div>
    <div class="col-8">
      <table class="table table-borderless" style="table-layout:fixed; word-wrap:break-word;">
        <tbody>
          <tr>
            <td width="150">商品名</td>
            <td width="300"><%= @product.name %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= @product.discription %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= @product.category.name %></td>
          </tr>
          <tr>
            <td>
              税込価格<br>
              （税抜価格）
            </td>
            <td class="align-middle">
              <%= @product.tax_in_price %>（）円
            </td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <% if @product.is_sold %>
              <td class="text-success font-weight-bold">販売中</td>
            <% else %>
              <td class="text-muted font-weight-bold">販売停止中</td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="text-center mt-3">
    <%= link_to "編集する", edit_admin_product_path(@product), class:"btn btn-dark btn-lg" %>
  </div>
</div>